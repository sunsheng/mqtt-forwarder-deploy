{
  "log_level": "debug",
  "mqtt": {
    "port": 1883,
    "keepalive": 60,
    "qos": 0,
    "retain": false,
    "clean_session": true
  },
  "clients": [
    {
      "name": "upstream",
      "ip": "mqtt-broker-upstream",
      "port": 1883,
      "client_id": "mqtt_forwarder_upstream"
    },
    {
      "name": "downstream", 
      "ip": "mqtt-broker-downstream",
      "port": 1883,
      "client_id": "mqtt_forwarder_downstream"
    }
  ],
  "rules": [
    {
      "name": "perf_test",
      "description": "性能测试规则",
      "source": {
        "client": "downstream",
        "topic": "/test/perf/#"
      },
      "target": {
        "client": "upstream", 
        "topic": "/test/perf/#"
      },
      "callback": "EventCall",
      "enabled": true
    }
  ]
}
